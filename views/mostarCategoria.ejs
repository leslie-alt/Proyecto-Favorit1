<%- include ("templates/header.ejs", {titulo:"INICIO"}) %> 

<div class="container mt-4">
  <h1 class="text-primary mb-4">Categorías</h1>

  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Descripción</th>
        <th scope="col">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% categoriasBD.forEach((categoria)=>{ %>
        <tr>
          <td><%= categoria.nombre %></td>
          <td><%= categoria.descripcion %></td>
          <td>
            <a href="/editarCategoria/<%= categoria._id %>" class="btn btn-warning btn-sm">
              <i class="bi bi-pencil"></i> Editar
            </a> 
            <a href="/borrarCategoria/<%= categoria._id %>" class="btn btn-danger btn-sm ms-2">
              <i class="bi bi-trash"></i> Borrar
            </a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include ("templates/footer.ejs") %>


